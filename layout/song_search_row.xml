<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/song_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/containerSong"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="6dp">

    <TextView
        android:id="@+id/title_search"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:maxLines="1"
        android:text="@string/title_song"
        android:textColor="@color/black"
        android:textSize="15.5sp" />

    <TextView
        android:id="@+id/artist_search"
        android:layout_width="260dp"
        android:layout_height="fill_parent"
        android:layout_below="@id/title_search"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="15dp"
        android:maxLines="1"
        android:text="@string/name_artist"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/textOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_24dp"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/desc"
        android:background="?selectableItemBackgroundBorderless"
        tools:tint="@android:color/black" />

</RelativeLayout>