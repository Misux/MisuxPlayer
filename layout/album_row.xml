<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_album"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:numColumns="auto_fit"
    android:layout_margin="3dp"
    android:stretchMode="spacingWidthUniform">

    <ImageView
        android:id="@+id/albumImg"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_gravity="top"
        android:scaleType="fitXY"
        android:contentDescription="@string/desc"
        android:src="@drawable/phonograph" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_below="@+id/albumImg">

        <TextView
            android:id="@+id/nameAlbum"
            android:layout_marginTop="10dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="@string/name_album"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"/>

        <TextView
            android:id="@+id/nameArtist"
            android:layout_below="@+id/nameAlbum"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:text="@string/name_artist"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
